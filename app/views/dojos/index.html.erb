
<style type="text/css">
	table, th, tr, th, td {
		border: 1px solid black;
		padding: 0px 5px;
	}
	form {
		display: inline-block;
	}
</style>
<h1>Listing All Dojos</h1>
<table>
	<tr>
		<th>Coding Dojo Branch</th>
		<th>Street</th>
		<th>City</th>
		<th>State</th>
		<th>Actions</th>
	</tr>
	
	<% @dojos.each do |dojo| %>

	<tr>
		<td><%= dojo.branch %></td>
		<td><%= dojo.street %></td>
		<td><%= dojo.city %></td>
		<td><%= dojo.state %></td>
		<td>
			<a href="/dojos/<%=dojo.id%>">Show</a> | 
			<a href="/dojos/<%=dojo.id%>/edit">Edit</a> |
			<%= link_to "Delete", "/dojos/"+dojo.id.to_s, data: { method: :delete, confirm: "Are you sure?" } %>


		</td>
	</tr>
	<% end %>



</table>
<br>



<a href = "/dojos/new">New Dojo </a>

